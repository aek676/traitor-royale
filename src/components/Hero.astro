---
import LinkButton from "./LinkButton.astro";
import ImpostorAnimation from "@/components/ImpostorAnimation.astro";
---

<div class="min-h-screen flex items-center justify-center p-4 overflow-hidden">
	<div
		class="text-center space-y-8 animate-in fade-in duration-700 w-full max-w-4xl mx-auto"
	>
		<div class="space-y-4 px-2">
			<h1
				class="text-5xl sm:text-6xl md:text-8xl font-bold text-foreground drop-shadow-lg text-balance"
			>
				¿Quién es el IMPOSTOR?
			</h1>
		</div>

		<div
			class="relative w-fit mx-auto
            h-auto
            px-4 sm:px-8 py-4 /* Menos padding lateral en móvil */
            rounded-xl
            border-[3px] border-red-900/30
            bg-linear-to-b from-cyan-300 via-cyan-500 to-cyan-600
            shadow-[inset_0_0_120px_rgba(0,0,0,1)]
            drop-shadow-[0_0_30px_rgba(220,38,38,0.2)]"
		>
			<div
				class="absolute inset-0 bg-black opacity-10 mix-blend-overlay pointer-events-none rounded-lg"
				style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%270 0 250 250%27 xmlns=%27http://www.w3.org/2000/svg%27%3E%3Cfilter id=%27noiseFilter%27%3E%3CfeTurbulence type=%27fractalNoise%27 baseFrequency=%274%27 numOctaves=%273%27 stitchTiles=%27stitch%27/%3E%3C/filter%3E%3Crect width=%27100%25%27 height=%27100%25%27 filter=%27url(%23noiseFilter)%27/%3E%3C/svg%3E');"
			>
			</div>

			<div
				class="w-full max-w-[260px] xs:max-w-[300px] sm:max-w-96 relative z-10 mx-auto"
			>
				<ImpostorAnimation />
			</div>
		</div>

		<LinkButton text="Jugar" href="/config" />
	</div>
</div>
